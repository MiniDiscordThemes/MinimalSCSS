{
	"name": "minimalscss",
	"version": "1.0.0",
	"description": "Minimal template for writing Discord themes in SCSS.",
	"repository": "github:MiniDiscordThemes/MinimalSCSS",
	"author": "Saltssaumure <themes@saltssaumure.net>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"watch": "sass ./scss:./dev --no-source-map --no-charset --watch --update",
		"build": "sass ./scss:./dist --no-source-map --no-charset --style=compressed",
		"format": "prettier ./scss --write --log-level warn"
	},
	"dependencies": {
		"sass": "^1.77.6"
	},
	"devDependencies": {
		"prettier": "^3.3.2"
	}
}
